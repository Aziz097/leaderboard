{
    "git": {
        "deploymentEnabled": true
    },
    "buildCommand": "npm run build",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "regions": [
        "sin1"
    ],
    "functions": {
        "app/**/*": {
            "maxDuration": 10
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Robots-Tag",
                    "value": "index, follow"
                }
            ]
        }
    ],
    "crons": []
}